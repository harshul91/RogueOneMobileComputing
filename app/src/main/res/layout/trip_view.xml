<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/primary_darker">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/first_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif"
                android:textSize="20sp"/>
            <com.pchmn.materialchips.ChipsInput
                android:id="@+id/entry_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="@string/tags"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:chip_labelColor="@color/chips_opened_bg"
                app:chip_backgroundColor="@color/accent"
                app:chip_deletable="true"
                />
            <TextView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/all_checkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif"
                android:textSize="20sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>